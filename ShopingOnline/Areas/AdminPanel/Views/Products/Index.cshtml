<!-- Index Page -->
@model IEnumerable<ShopingOnline.Models.Product>
<link rel="stylesheet" href="~/css/style.css" />
<div class="container">
<div class="mt-5">
    <h2 class="page-title">Products List</h2>
    <a asp-action="Create" class="btn btn-success mb-3">+ Add Product</a>
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Image</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td style="white-space: normal; word-wrap: break-word; max-width: 200px;">
                        @item.Description
                    </td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td><img src="~/images/Products/@item.Image" style="border-radius:10px" width="100px" height="100px" /></td>
                    <td>@item.Category?.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>