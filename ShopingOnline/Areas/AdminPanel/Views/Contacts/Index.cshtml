@model IEnumerable<ShopingOnline.Models.Contact>

<!-- ربط CSS مخصص -->
<link href="~/css/style.css" rel="stylesheet" />

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="mb-0 text-primary fw-bold">قائمة رسائل التواصل</h5>
        <a asp-action="Create" class="btn btn-sm btn-success rounded-pill shadow">
            <i class="fas fa-plus me-1"></i> جديد
        </a>
    </div>

    <div class="table-responsive shadow-sm border rounded">
        <table class="table table-hover table-bordered table-sm align-middle text-center mb-0">
            <thead class="table-primary">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Subject)</th>
                    <th>@Html.DisplayNameFor(model => model.Message)</th>
                    <th>إجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-secondary">
                        <td class="text-nowrap">@Html.DisplayFor(modelItem => item.Name)</td>
                        <td class="text-nowrap">@Html.DisplayFor(modelItem => item.Subject)</td>
                        <td class="message-cell">
                            @Html.DisplayFor(modelItem => item.Message)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
