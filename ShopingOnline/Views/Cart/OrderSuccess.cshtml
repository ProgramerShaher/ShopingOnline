@model Order
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<div class="container py-5 text-center">
    <h2 class="text-success fw-bold mb-4">✅ تم إتمام الطلب بنجاح!</h2>

    <p class="fs-5 mb-4">رقم الطلب الخاص بك هو: <strong class="text-primary">@Model.Id</strong></p>
    <p class="fs-4 mb-5">الإجمالي: <strong class="text-danger">@Model.TotalAmount</strong> ريال</p>

    <h4 class="text-primary mb-4">تفاصيل الطلب:</h4>
    <ul class="list-group mb-4">
        @foreach (var detail in Model.OrderDetails)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <strong>@detail.Product.Name</strong><br />
                    <small class="text-muted">الكمية: @detail.Quantity</small>
                </div>
                <span class="badge bg-info">@detail.Quantity × @detail.Price ريال</span>
            </li>
        }
    </ul>

    <a href="/Home/Categories" class="btn btn-primary btn-lg px-5 py-3 mt-4 rounded-pill shadow-sm">العودة للتسوق</a>


    <a href="@Url.Action("Invoice", new { orderId = Model.Id })" class="btn btn-secondary mt-3">عرض الفاتورة</a>


</div>
