@model Order

@{
    ViewData["Title"] = "إتمام الطلب";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />


<div class="container py-5">
    <h2 class="text-center mb-5 fw-bold text-primary">📝 إتمام الطلب</h2>

    <form asp-action="Invoice" method="post" class="row g-4">

        <!-- بيانات المستخدم -->
        <div class="col-md-6">
            <label class="form-label">الاسم الكامل</label>
            <input asp-for="@Model.User.FullName" class="form-control" required />
        </div>

        <div class="col-md-6">
            <label class="form-label">البريد الإلكتروني</label>
            <input asp-for="@Model.User.Email" class="form-control" required />
        </div>

        <div class="col-md-6">
            <label class="form-label">رقم الهاتف</label>
            <input asp-for="@Model.User.PhoneNumber" class="form-control" required />
        </div>



        <!-- ملخص الطلب -->
        <div class="col-12 mt-4">
            <h4 class="text-primary fw-bold">💰 ملخص الطلب</h4>
            <p>سيتم احتساب الإجمالي تلقائيًا من السلة عند التأكيد.</p>
        </div>

        <!-- زر الإتمام -->
        <div class="col-12 text-center">
            <button type="submit" class="btn btn-success btn-lg px-5 rounded-pill">تأكيد الطلب</button>
        </div>
    </form>
</div>

