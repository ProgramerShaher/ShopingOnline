@model IEnumerable<Contact>

@{
    ViewData["Title"] = "الرسائل المستلمة";
}

<!-- من wwwroot/css -->
@* <link href="~/css/bootstrap.min.css" rel="stylesheet" /> *@

@* <!-- من wwwroot/fontawesome/css --> *@
@* <link href="~/fontawesome/css/all.min.css" rel="stylesheet" /> *@
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<div class="container py-5">
    <h2 class="mb-4 text-center text-primary">
        <i class="fas fa-envelope"></i> الرسائل المستلمة
    </h2>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var msg in Model)
        {
            <div class="col">
                <div class="card h-100 shadow border-0">
                    <div class="card-body">
                        <h5 class="card-title text-success">
                            <i class="fas fa-user"></i> @msg.Name
                        </h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                            <i class="fas fa-envelope"></i> @msg.Email
                        </h6>
                        <p class="card-text mt-2">
                            <strong class="text-dark">الموضوع:</strong> @msg.Subject
                        </p>
                        <p class="card-text text-secondary">
                            <strong>الرسالة:</strong><br /> @msg.Message
                        </p>
                    </div>
                    <div class="card-footer bg-light text-end small text-muted">
                        <i class="fas fa-clock"></i> @msg.SentDate.ToString("yyyy/MM/dd - HH:mm")
                    </div>
                </div>
            </div>
        }
    </div>
</div>
