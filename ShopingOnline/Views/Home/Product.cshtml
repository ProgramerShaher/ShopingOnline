@model List<ShopingOnline.Models.Product>
@{
    ViewData["Title"] = "منتجاتنا";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />


<!-- عنوان الصفحة -->
<h2 class="text-center my-5 fw-bold" style="color: var(--primary-color);">
    منتجاتنا المميزة <span style="color: var(--accent-color);">✨</span>
</h2>
<!-- ACCOUNT -->
<div class="col-md-3 clearfix" >
    <div class="header-ctn">
        <!-- Wishlist -->
        <div>
            <a href="#">
                <i class="fa fa-heart-o"></i>
                <span>قائمة رغباتي</span>
            </a>
        </div>
        <!-- /Wishlist -->
        <!-- Cart -->
        <div class="dropdown">
            <a asp-controller="Cart" asp-action="Index">
                <i class="fa fa-shopping-cart"></i>
                <span>عربتي</span>
                <div class="qty">@ViewBag.CartItemsCount </div>
            </a>

        </div>
        <!-- /Cart -->
        <!-- Menu Toogle -->
        <div class="menu-toggle">
            <a href="#">
                <i class="fa fa-bars"></i>
                <span>Menu</span>
            </a>
        </div>
        <!-- /Menu Toogle -->
    </div>
</div>

<!-- /ACCOUNT -->

<!-- تنسيقات CSS مخصصة -->
<style>
    :root {
        --primary-color: #2b2d42;
        --accent-color: #ef233c;
        --light-bg: #f8f9fa;
        --card-bg: #ffffff;
        --shadow-color: rgba(0, 0, 0, 0.1);
    }

    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 30px;
        padding: 20px;
    }

    .product-card {
        background-color: var(--card-bg);
        border-radius: 15px;
        box-shadow: 0 8px 20px var(--shadow-color);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 25px var(--shadow-color);
        }

    .product-img img {
        width: 100%;
        height: 220px;
        object-fit: cover;
        border-bottom: 1px solid #eee;
    }

    .product-body {
        padding: 15px;
        text-align: center;
    }

    .product-category {
        font-size: 0.9rem;
        color: gray;
    }

    .product-name a {
        font-size: 1.2rem;
        font-weight: bold;
        color: var(--primary-color);
        text-decoration: none;
    }

    .product-price {
        font-size: 1.1rem;
        color: var(--accent-color);
    }

    .product-old-price {
        font-size: 0.9rem;
        color: #aaa;
        text-decoration: line-through;
    }

    .product-rating i {
        color: gold;
        margin: 2px;
    }

    .product-btns, .add-to-cart {
        margin-top: 10px;
        display: flex;
        justify-content: center;
        gap: 10px;
        flex-wrap: wrap;
    }

        .product-btns button, .add-to-cart-btn {
            border: none;
            background-color: var(--primary-color);
            color: white;
            padding: 8px 12px;
            border-radius: 10px;
            transition: background-color 0.3s ease;
            font-size: 0.9rem;
        }

            .product-btns button:hover,
            .add-to-cart-btn:hover {
                background-color: var(--accent-color);
            }

    .tooltipp {
        margin-left: 5px;
    }
</style>

<!-- عرض المنتجات -->
<div class="container">
    <div class="product-grid">

        @foreach (var item in Model)
        {
           
            <div class="product-card">
                <div class="product-img">
                    <img src="~/images/Products/@item.Image" alt="@item.Name">
                </div>
                <div class="product-body">
                    <p class="product-category">@item.Category</p>
                    <h3 class="product-name"><a href="#">@item.Name</a></h3>
                    <h4 class="product-price">@item.Price $ <del class="product-old-price">$990.00</del></h4>
                    <div class="product-rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                    </div>
                    <div class="product-btns">
                        <button class="add-to-wishlist">
                            <i class="fa fa-heart-o"></i><span class="tooltipp">أضف إلى المفضلة</span>
                        </button>
                        <button class="add-to-compare">
                            <i class="fa fa-exchange"></i><span class="tooltipp">قارن المنتج</span>
                        </button>
                        <button class="quick-view">
                            <i class="fa fa-eye"></i><span class="tooltipp">عرض سريع</span>
                        </button>
                    </div>
                    <div class="add-to-cart">
                        <a type="submit" asp-action="AddToCart" asp-route-id="@item.Id" class="add-to-cart-btn">
                            <i class="fa fa-shopping-cart"></i> أضف إلى السلة
                        </a>
                    </div>

                </div>
            </div>
        }
    </div>
</div>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />