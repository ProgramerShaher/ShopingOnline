@model List<Category>
@{
    ViewData["Title"] = "أقسام المتجر";

}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />



<br />
<br />

<!-- عرض الأقسام -->
<section class="py-5 bg-soft-light">
    <div class="container">
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="category-card card border-0 shadow-sm h-100 overflow-hidden transition-all">
                        <div class="category-badge">
                            <span class="badge bg-danger">الأكثر مبيعاً</span>
                        </div>
                        <div class="category-img-container">
                            <img src="~/images/Catogry/@item.Image" class="category-img" alt="@item.Name">
                            <div class="category-overlay d-flex align-items-center justify-content-center">
                                <a asp-controller="Home" asp-action="Product" asp-route-id="@item.Id"
                                   class="btn btn-outline-light rounded-pill px-4">
                                    <i class="fas fa-eye me-1"></i> تصفح القسم
                                </a>
                            </div>
                        </div>
                        <div class="card-body text-center">
                            <h3 class="h5 fw-bold mb-2">@item.Name</h3>
                            <p class="text-muted small mb-3">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a asp-controller="Home" asp-action="Product" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-primary rounded-pill px-3">
                                    <i class="fas fa-arrow-left me-1"></i> عرض
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- أنماط مخصصة -->
<style>
    /* هيدر متدرج */
    .bg-gradient-primary {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
    }

    .category-hero {
        padding: 5rem 0;
        position: relative;
        overflow: hidden;
    }

    /* بطاقات الأقسام */
    .category-card {
        border-radius: 12px;
        transition: all 0.3s ease;
    }

        .category-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

    .category-img-container {
        height: 200px;
        overflow: hidden;
        position: relative;
    }

    .category-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .category-card:hover .category-img {
        transform: scale(1.05);
    }

    .category-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.4);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .category-card:hover .category-overlay {
        opacity: 1;
    }

    .category-badge {
        position: absolute;
        top: 15px;
        left: 15px;
        z-index: 2;
    }

    /* خلفية ناعمة */
    .bg-soft-light {
        background-color: #f8f9fa;
    }

    /* تأثيرات عامة */
    .transition-all {
        transition: all 0.3s ease;
    }

    /* تصميم متجاوب */
    @@media (max-width: 768px) {
        .category-hero {
            padding: 3rem 0;
        }

        .category-img-container {
            height: 160px;
        }
    }
</style>